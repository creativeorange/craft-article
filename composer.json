{
  "name": "creativeorange/craft-article",
  "description": "A rich content editor with Grid, layout and template capabilities",
  "type": "craft-plugin",
  "authors": [
    {
      "name": "Creativeorange",
      "homepage": "https://www.creativeorange.nl",
      "email": "support@creativeorange.nl"
    }
  ],
  "support": {
    "email": "support@creativeorange.nl",
    "issues": "https://github.com/creativeorange/craft-article/issues?state=open",
    "source": "https://github.com/creativeorange/craft-article",
    "docs": "https://docs.creativeorange.nl/craft-article"
  },
  "require": {
    "craftcms/cms": "^5.0.0",
    "guzzlehttp/guzzle": "^6.0 || ^7.0"
  },
  "autoload": {
    "psr-4": {
      "creativeorange\\craft\\article\\": "src/"
    }
  },
  "extra": {
    "name": "Article Editor",
    "handle": "craft-article",
    "description": "A rich content editor with Grid, layout and template capabilities"
  },
  "config": {
    "allow-plugins": {
      "yiisoft/yii2-composer": true,
      "craftcms/plugin-installer": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require-dev": {
    "craftcms/rector": "dev-main"
  }
}
